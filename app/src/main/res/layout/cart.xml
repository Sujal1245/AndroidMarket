<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:background="@drawable/background2">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_alignParentTop="true">
	<include
		android:id="@+id/cartinclude"
		layout="@layout/app_bar_main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
	<Button
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="My Orders"
		android:layout_margin="5dp"
		android:background="#E2B559"
		android:textColor="#FFFFFF"
		android:id="@+id/cartButton2"/>
    </LinearLayout>
	<ListView
		android:layout_height="450dp"
		android:layout_width="wrap_content"
		android:id="@+id/cartListView1"
		android:layout_centerInParent="true"
		android:paddingTop="10dp"/>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="Button"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:id="@+id/cartButton1"
		android:background="#69B240"
		android:layout_margin="10dp"
		android:textColor="#FFFFFF"/>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:text="No Items Here"
		android:layout_centerInParent="true"
		android:textColor="#F51A0C"
		android:visibility="gone"
		android:id="@+id/cartTextView1"/>
	
</RelativeLayout>

